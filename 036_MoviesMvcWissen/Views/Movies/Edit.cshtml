@using (Html.BeginForm("Edit", "Movies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("Id", Model.Id)
    <div class="form-group">
        @Html.Label("tbName", "Name:")
        @Html.TextBox("Name", Model.Name, new { @class = "form-control", placeholder = "Enter movie name", id = "tbName" })
    </div>
    <div class="form-group">
        @Html.Label("ddlProductionYear", "Production Year:")
        @Html.DropDownList("ProductionYear", years, new { @class = "form-control", id = "ddlProductionYear" })
    </div>
    <div class="form-group">
        @Html.Label("tbBoxOfficeReturn", "Box Office Return:")
        @Html.TextBox("BoxOfficeReturn", Model.BoxOfficeReturn, new { @class = "form-control", placeholder = "Enter movie box office return", id = "tbBoxOfficeReturn" })
    </div>

    <div class="form-group">
        @Html.Label("ddlDirectors", "Directors :")
        @Html.ListBox("directorIds", directors, new { @class = "form-control", id = "ddlDirectors"})
    </div>
    <div class="form-group">
        @Html.Label("fulImage", "Image:")
        <input type="file" name="Image" accept="image/*" id="fulImage" />
    </div>

    @*<input type="submit" name="name" value="Save" class="btn btn-success" />*@
    @Html.SaveButton()
    @:&nbsp;
    @*<input type="reset" name="name" value="Clear" class="btn btn-warning" />*@
    @Html.Button("Clear", "btn btn-warning", "reset")
}