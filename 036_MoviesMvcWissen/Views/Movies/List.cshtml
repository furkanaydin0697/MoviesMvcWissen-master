@model _036_MoviesMvcWissen.Models.ViewModels.MoviesIndexViewModel

@using _036_MoviesMvcWissen.Helpers
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbName", "Name:")
        </div>
        <div class="col-md-10">
            @Html.TextBox("Name", "", new { @class = "form-control", id = "lbName" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbProductionName", "Production Year:")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("YearId", Model.Year, "---All---", new { @class = "form-control", id = "lbProductionName" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbBoxOfficeReturn", "Box Office Return:")
        </div>
            Between
        <div class="col-md-4">
            @Html.TextBox("Min", "", new { @class = "form-control", id = "lbBoxOfficeReturn", placeholder = "Min" })
        </div>
            And
        <div class="col-md-4">
            @Html.TextBox("Max", "", new { @class = "form-control", placeholder = "Max"})
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">
            @Html.Button("Search", "btn btn-primary", "submit")
        </div>
        <div class="col-md-3">
            <a class="btn btn-secondary" href="@Url.RouteUrl("Default", new { controller = "Movies", action = "List" })">Clear</a>
        </div>
    </div>
}


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            ProductionYear
        </th>
        <th>
            BoxOfficeReturn
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Movies)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxOfficeReturn)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
