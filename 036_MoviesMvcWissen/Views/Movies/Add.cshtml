
@{
    ViewBag.Title = "Add Movie";
}

<h2>@ViewBag.Title</h2>
<p style="color: darkorange">@ViewBag.Message</p>

<form action="~/Movies/Add" method="post">
    <div class="form-group">
        <label for="tbName">Name</label>
        <input type="text" class="form-control" id="tbName" name="Name">
    </div>
    <div class="form-group">
        <label for="ddlProductionYear">ProductionYear</label>
        @*<input type="text" class="form-control" id="tbProductionYear" name="ProductionYear">*@
        <select id="ddlProductionYear" name="ProductionYear" class="form-control">
            @for (int i = DateTime.Now.Year; i >= 1980; i--)
            {
                <option value="@i">@i</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="tbBoxOfficeReturn">BoxOfficeReturn</label>
        <input type="text" class="form-control" id="tbBoxOfficeReturn" name="BoxOfficeReturn">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    &nbsp;
    <button type="reset" class="btn btn-warning">Clear</button>
</form>
